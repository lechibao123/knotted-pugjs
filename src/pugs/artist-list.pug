    .wrapper-child
        .artist-collapse
            -
                let listArray = [
                    {name: "BRENT HARRIS", country: "AUS ",avata: "./assets/imgs/hover-article.jpg", img: "../assets/imgs/detail-img.jpg", website: "https://www.google.com/", ig: "https://www.instagram.com/"},
